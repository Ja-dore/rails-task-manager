 <h1> To-Do List </h1>
 <% @tasks.each do |task| %>
    <li>
    <%= link_to task.title, task_path(task) %>
    <%= link_to task_path(task), method: :delete, data: {confirm: "Are you sure?"} do %>
      <i class="far fa-trash-alt"> delete </i>
    <% end %>
  <% end %>
</ul>
<%= link_to "Add a new task", "tasks/new" %>
