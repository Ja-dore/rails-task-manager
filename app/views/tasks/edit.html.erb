<%= form_for(@task) do |t| %>
  <%= t.label :title %>
  <%= t.text_field :title %>
  <%= t.label :details %>
  <%= t.text_field :details %>
  <div class='form-group'>
    <%=   t.label :completed, "completed" %>
    <%= t.check_box :completed , {} , true, false %>
  </div>
  <%= t.submit %>
<% end %>

<%= link_to "back to list", tasks_path%>
